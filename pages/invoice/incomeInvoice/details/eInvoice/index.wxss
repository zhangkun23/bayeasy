/* pages/invoice/incomeInvoice/details/eInvoice/index.wxss */
page {
    width: 100%;
    height: 100%;

}
.mycontainer {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.wrapper {
    flex: 1;
    height: 1px;
    display: flex;
    flex-direction: column;
}

.bg {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* margin-top: 32rpx;
    margin-bottom: 50rpx; */
    position: relative;
    margin-bottom: 32rpx;
}

.bg .mycard {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-left: 32rpx;
    margin-right: 32rpx;
    background: #FFFFFF;
    box-shadow: 0px 10rpx 30rpx 0px rgba(201, 209, 228, 0.38);
    border-radius: 32px;
}

.pdf {
    width: 592rpx;
    height: 378rpx;
}

.bg .mycard .mycontent {
    margin: 36rpx 47rpx 36rpx 47rpx;
}

.download {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 34rpx;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 88rpx;
    margin: 48rpx auto;
    width: 500rpx;
    height: 88rpx;
    background: #1D83F0;
    box-shadow: 0px 29px 47px 0px rgba(29, 131, 240, 0.2);
    border-radius: 44px;
}