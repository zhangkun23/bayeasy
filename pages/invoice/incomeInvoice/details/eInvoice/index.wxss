.mycontainer {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.wrapper {
  flex: 1;
  height: 1rpx;
}

.mycontainer__wrapper{
  padding: 40rpx 32rpx;
}
.mycontainer__list {
  padding-bottom: 168rpx;
}

.bg {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-bottom: 32rpx;
}

.bg .mycard {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 30rpx 0px rgba(201, 209, 228, 0.38);
  border-radius: 32rpx;
}

.pdf {
  width: 592rpx;
  height: 378rpx;
}

.bg .mycard .mycontent {
  margin: 36rpx 47rpx 36rpx 47rpx;
}

.downloadBox {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0rpx;
  height: 168rpx;
  background: #fff;
  width: 100%;
}

.downloadBox>.download {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 500rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin: 40rpx auto;
  background: #1D83F0;
  box-shadow: 0px 29px 47px 0px rgba(29, 131, 240, 0.2);
  border-radius: 44px;
}