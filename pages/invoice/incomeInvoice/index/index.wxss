/* pages/invoice/incomeInvoice/index/index.wxss */

.incomeInvoice {
    max-height: 1360rpx;
    margin: 32rpx;
}

.wrapper .content {
    margin: 32rpx;
    height: 100%;
}


.inv-container {
    margin-bottom: 32rpx;
    padding: 48rpx 32rpx;
    width: 100%;
    background: #fff;
    box-sizing: border-box;
    margin-bottom: 32rpx;
    box-shadow: 0px 10px 30px 0px rgba(201, 209, 228, 0.38);
    border-radius: 28rpx;
}

.topbar {
    display: flex;
    justify-content: space-between;
    padding-bottom: 32rpx;
    border-bottom: 1rpx solid #D2E0EF;
    margin-bottom: 23rpx;
}

.topbar .name {
    font-size: 28rpx;
    color: #283E56;
}

.topbar .status {
    font-size: 24rpx;
}

.yellow {
    color: #FFA42E;
}

.blue {
    color: #1C83F0;
}

.grey {
    color: #6E87A2;
}

.money {
    font-size: 48rpx;
    font-weight: 600;
}

.bottombar {
    margin-top: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.bottombar .datetime {
    font-size: 24rpx;
    font-weight: 400;
    color: #6E87A2;
    line-height: 32rpx;
}

.bottombar .detailsBtn {
    width: 156rpx;
    height: 60rpx;
    border-radius: 30px;
    line-height: 60rpx;
    font-size: 24rpx;
    text-align: center;
}

.orangeBg {
    color: #FFFFFF;
    background: #FFAB3F;
}

.blueBg {
    background: #D1E6FC;
    color: #1C83F0;
}