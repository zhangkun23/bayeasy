}

.card {
    width: 100%;
    background: #FFFFFF;
    box-shadow: 0px 10rpx 30rpx 0rpx rgba(201, 209, 228, 0.38);
    border-radius: 28rpx;
}

.card .content {
    position: relative;
    /* margin: 48rpx 32rpx 0 32rpx; */
    display: flex;
    flex-direction: column;
}

.card .topbar {
    font-size: 28rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #283E56;
    line-height: 36rpx;
    display: flex;
}

.card .status {
    margin-left: auto;
    order: 2;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 32rpx;
}

.yellow {
    color: #FFA42E;
}

.blue {
    color: #1C83F0;
}

.grey {
    color: #6E87A2;
}

.card .split {
    margin-top: 32rpx;
    height: 1rpx;
    margin-left: 0rpx;
    margin-right: 0rpx;
    right: 0;
    opacity: 0.5;
}

.card .money {
    margin-top: 23rpx;
    font-size: 48rpx;
    font-weight: 600;
    line-height: 72rpx;
}

.card .bottombar {
    margin-top: 10rpx;
    margin-bottom: 48rpx;
    display: flex;
    align-items: center;
}

.bottombar .datetime {
    font-size: 24rpx;
    font-weight: 400;
    color: #6E87A2;
    line-height: 32rpx;
}

.bottombar .detailsBtn {
    width: 156rpx;
    height: 60rpx;
    margin-left: auto;
    order: 2;
    border-radius: 30px;
    font-weight: 400;
    line-height: 33rpx;
    font-size: 24rpx;
}

.orangeBg {
    color: #FFFFFF;
    background: #FFAB3F;
}

.blueBg {
    background: #D1E6FC;
    color: #1C83F0;
}