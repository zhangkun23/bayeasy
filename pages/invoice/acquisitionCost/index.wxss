.search-container {
    /* margin-top: 2.7%; */
    margin-top: 32rpx;
    position: relative;

}

.search-container .search-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    background-color: #F3F8FC;
}

.search-container .search-content {
    margin-left: 32rpx;
    margin-right: 32rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    position: relative;
}

.search-container .searchbar {
    flex: 1;
    height: 70rpx;
}

.search-container .filter {
    order: 2;
    margin-left: 16rpx;
}

.search-container .searchtext {
    order: 2;
    margin-left: auto;
    margin-right: 30rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    line-height: 33rpx;
}

.icon {
    width: 50rpx;
    height: 50rpx;
}

.text {
    font-size: 24rpx;
    font-weight: 400;
    line-height: 33rpx;
}

.filter-box {
    position: relative;
    height: max-content;
    /* margin-bottom: 50rpx; */
}


.empty-res-contain {
    position: relative;
    top: 200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* margin-bottom: 50vh; */
}

.empty-res-contain .emptyPic {
    width: 370rpx;
    height: 300rpx;
}


.empty-res-contain .text {
    margin-top: 20rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #48617C;
    line-height: 33rpx;
}

.res-container {
