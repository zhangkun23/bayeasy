}

.info-container .text {
    display: flex;
    margin-top: 24rpx;
    line-height: 2;
    /* align-items: center; */
}

.bottom-container {
    margin-top: 9rpx;
    display: flex;
    justify-content: flex-start;
    align-content: center;
}

.bottom-container .company-name {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    font-weight: 400;
    color: #283E56;
    line-height: 32rpx;
}


.bottom-container .details-btn {
    order: 2;
    margin-left: auto;
    display: flex;
    justify-content: center;
    align-items: center;

    width: 170rpx;
    height: 60rpx;
    border-radius: 30rpx;

    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 32rpx;
}

.modal {
    background-color: #979797;
    position: absolute;
    opacity: 0.5;
    flex: 1;
    /* height: 100%; */
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
}

.footer {
    position: relative;
    flex: 1;
    flex-grow: 10;
    padding-bottom: max(constant(safe-area-inset-bottom), 50px);
    /* 兼容 iOS < 11.2 */
    padding-bottom: max(env(safe-area-inset-bottom), 50px);
    /* 兼容 iOS >= 11.2 */
}

.footer .content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0;
    justify-content: flex-end;
}