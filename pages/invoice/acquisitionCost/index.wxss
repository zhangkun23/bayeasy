.content-container  {
    /* display: flex; */
    /* position: relative; */
    margin-bottom: 32rpx;
    padding: 32rpx;
    background: #FFFFFF;
    box-shadow: 0px 10px 30px 0px rgba(209, 213, 223, 0.6);
    border-radius: 28px;
}

.res-container .card .content-container {
    width: 100%;
    margin: 32rpx 32rpx 32rpx 32rpx;
    /* flex-direction: column; */
}

.res-container .card .content-container .title-container {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.title-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 31rpx;
    margin-bottom: 23rpx;
    border-bottom: 1px solid #E6EEF7
}

.title-container .title {
    display: flex;
    font-size: 28rpx;
    font-weight: 600;
    color: #283E56;
}

.title-container .title .icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
}




.info-container {
    /* display: flex;
    flex-direction: column; */
    font-size: 24rpx;
    /* font-weight: 400; */
    color: #48617C;
