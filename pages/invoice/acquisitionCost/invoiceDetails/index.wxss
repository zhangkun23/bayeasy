/* pages/invoice/acquisitionCost/invoiceDetails/index.wxss */

page {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding-bottom: max(constant(safe-area-inset-bottom), 50rpx);
    /* 兼容 iOS < 11.2 */
    padding-bottom: max(env(safe-area-inset-bottom), 50rpx);
}

.green {
    color: #46CF84
}

.red {
    color: #FF475A;
}

.blue {
    color: #1D83F0;
}

.blueBg {
    background-color: #1D83F0;
}

.orange {
    color: #FFA42E;
}

.orangeBg {
    background-color: #FFA42E;
}


.mycontainer {
    flex: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.wrapper {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 1px;
}

.wrapper .inner-container {
    margin: 32rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.hint-container {
    border-radius: 12rpx;
    margin-bottom: 24rpx;
}

.pass {
    background-color: #E6F9F3;

}

.fail {
    background-color: #FFF0ED;
}

.hint-container .pass-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    margin: 24rpx;
    background: #E6F9F3;
    border-radius: 12rpx;
    color: #0CC991;

}

.hint-container .fail-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    margin: 24rpx;
    background: #FFF0ED;
    border-radius: 12rpx;
    color: #FF475A;
}

.hint-container .title {
    display: flex;
    justify-content: flex-start;
    align-content: center;
    font-size: 28rpx;
    font-weight: 600;
    line-height: 36rpx;
}

.hint-container .info {
    margin-top: 8rpx;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 32rpx;
}

.hint-container .title .statusIcon {
    width: 30rpx;
    height: 30rpx;
    margin-right: 8rpx;
}


.card {
    background: #FFFFFF;
    box-shadow: 0px 20px 60px 0px rgba(209, 213, 223, 0.6);
    border-radius: 28rpx;
    margin-bottom: 32rpx;
}


.card .content-container {
    padding: 48rpx 32rpx 48rpx 32rpx;
}

.card .content-container .title-container {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.title-container .title {
    display: flex;
    justify-content: flex-start;
    align-content: center;
    font-size: 28rpx;
    font-weight: 600;
    color: #283E56;
    line-height: 32rpx;
}

.title-container .title .icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
}

.title-container .voice-status {
    display: flex;
    align-content: center;
    margin-left: auto;
    order: 2;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 32rpx;
}


.split {
    margin-top: 23rpx;
    width: 100%;
}

.info-container {
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    font-weight: 400;
    color: #48617C;
    line-height: 32rpx;
}

.info-container .text {
    margin-top: 40rpx;
    display: flex;
    align-items: center;
}

.bottom-container {
    margin-top: 9rpx;
    display: flex;
    justify-content: flex-start;
    align-content: center;
}

.bottom-container .company-name {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    font-weight: 400;
    color: #283E56;
    line-height: 32rpx;
}


.bottom-container .details-btn {
    order: 2;
    margin-left: auto;
    display: flex;
    justify-content: center;
    align-items: center;

    width: 170rpx;
    height: 60rpx;
    border-radius: 30rpx;

    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 32rpx;
}

.pic-container {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    margin-bottom: 160rpx;
}

.pic-container .title {
    margin-left: 32rpx;
    margin-bottom: 24rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #283E56;
    line-height: 53rpx;
}
.pic-container .container{
    padding: 0rpx;
    background: #FFFFFF;
    box-shadow: 0px 10px 30px 0px rgba(201, 209, 228, 0.38);
    border-radius: 32px;
}
.pic-container .container .content{
    margin: 36rpx 47rpx 36rpx 47rpx;
}
.pic-container .container .content .pdf{

}

.pic-container .container .content .img{
    width: 592rpx;
    height: 378rpx;
}

.pic-container .container .content .empty{
    margin: 105rpx 195rpx;
    width: 296rpx;
    height: 240rpx;
    opacity: 0.6;
}

.contactPos {
    height: 100%;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 50rpx;
}

.footer {
    position: relative;
    flex: 1;
    flex-grow: 10;
    padding-bottom: max(constant(safe-area-inset-bottom), 50px);
    /* 兼容 iOS < 11.2 */
    padding-bottom: max(env(safe-area-inset-bottom), 50px);
    /* 兼容 iOS >= 11.2 */
}

.footer .content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0;
    justify-content: flex-end;
}