/* pages/invoice/invoiceUpload/updateHandel/index.wxss */

.mycontainer {
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.wrapper {
    flex: 1;
    height: 1px;
}

.count {
    margin: 0 35rpx;
}

.updateInfo {
    margin-top: 54rpx;
    display: flex;
}

.updateInfo_name {
    width: 200rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #48617C;
}

.updateInfo_box {
    width: 360rpx;
    height: 260rpx;
    background: #F3F8FC;
    border-radius: 16rpx;
    padding: 31rpx 38rpx 32rpx 30rpx;
    position: relative;
    background: #F3F8FC;
}

.updateInfo_box>.close {
    position: absolute;
    right: -25rpx;
    top: -25rpx;
    height: 44rpx;
    width: 44rpx;
}

.updateInfo_box>.invoiceImg {
    height: 100%;
    width: 100%;
}

.addImg {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -25rpx;
    margin-top: -25rpx;
}

.submit {
    margin: 64rpx 125rpx;
    height: 88rpx;
    background: #1D83F0;
    box-shadow: rpx 30rpx 50rpx 0rpx rgba(29, 131, 240, 0.2);
    border-radius: 44rpx;
    text-align: center;
    color: #FFFFFF;
    line-height: 88rpx;
}

.submitDiesable {
    background: #E6EEF7;
    margin: 64rpx 125rpx;
    height: 88rpx;
    box-shadow: rpx 30rpx 50rpx 0rpx rgba(29, 131, 240, 0.2);
    border-radius: 44rpx;
    text-align: center;
    line-height: 88rpx;
    color: #ABBED2;
}

page {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding-bottom: max(constant(safe-area-inset-bottom), 50rpx);
    /* 兼容 iOS < 11.2 */
    padding-bottom: max(env(safe-area-inset-bottom), 50rpx);
}