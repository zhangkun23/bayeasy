
.swiper{
    height: 1600rpx;
    box-sizing: border-box;
    position: relative;
}
.topBg{
    width: 100%;
    height: 545rpx;
    background-color: red;
}
.titleTop{
    position: fixed;
    z-index: 4;
    background: #FFFFFF;
    color: #FFFFFF;
}
.info{
    position: absolute;
    top: 80rpx;
    left: 32rpx;
    right: 32rpx;
    text-align: center;
}
.infoStatus{
    font-size: 36rpx;
    font-weight: 600;
    color: #FFFFFF;
}
.errMessage{
    font-size: 24rpx;
    color: #FFF;
}
.infoStatus__status{
    height: 80rpx;
    width: 80rpx;
}
.info__swiper{
    margin-top: 32rpx;
    background: #FFFFFF;
    box-shadow: 0px 20rpx 60rpx 0px rgba(209, 213, 223, 0.6);
    border-radius: 32rpx;
    padding: 32rpx;
}
.invoice_img{
    width: 100%;
}
.index{
    color: #ABBED2;
    text-align: center;
}
.info__swiper__item{
    border-top: 1px dashed #E9ECF3;
    border-bottom: 1px dashed #E9ECF3;
    text-align: left;
    font-size: 24rpx;
    font-weight: 400;
    color: #48617C;
    margin: 31rpx 0rpx;
}
.info__swiper__item>view{
    height: 80rpx;
    width: 100%;
    line-height: 80rpx;
}
.total_amount{
    display: flex;
    justify-content: start;
}
.removeItem{
    height: 80rpx;
    width: 80rpx;
}