

.bgCount{
    position: relative;
}
.titleTop{
    width: 100%;
    background: #1D83F0;
    border: 1px solid #1D83F0;
}
.errInfo{
    margin: 0 32rpx;
    height: 64rpx;
    background: #FEF8E5;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    padding-left: 24rpx;
    margin-top: 28rpx;
}
.errInfo>image{
    height: 25rpx;
    width: 25rpx;
}
.errInfo>text{
    font-size: 24rpx;
    font-weight: 400;
    color: #FFA42E;
    padding-left: 4rpx;
}
.invoice{
    margin: 32rpx 35rpx;
    height: 5000rpx;
    justify-content: space-between;    
    display: flex;    
    flex-wrap: wrap;    
    align-content: flex-start;
}
.invoice__status{
    margin: 64rpx 110rpx;
    height: 150rpx;
    border: 1px solid red;
}
.invoice__status__active{
    display: flex;
}
.invoice__status__active>text{
    flex: 1;
    text-align: center;
    color: #FFFFFF;
    font-size: 24rpx;
}
.item{
    min-height: 296rpx;
    width: 49%;
    margin-bottom: 24rpx;
}
.item__top{
    height: 200rpx;
    background: #FFFFFF;
    box-shadow: 0px 20rpx 36rpx 0rpx rgba(209, 213, 223, 0.6);
    border-radius: 8rpx;
    border: 16rpx solid #E6F2FF;
}
.item__top__invoice{
    height: 100%;
    width: 100%;
}
.item__top>view>image{
    height: 100%;
    width: 100%;
}
.item__bottom{
    background: #FDFEFF;
    box-shadow: 0rpx 4rpx 28rpx 0rpx rgba(209, 213, 223, 0.48);
    padding: 16rpx;
}
.item__bottom>view{
    margin-bottom: 8rpx;
}
.item__bottom__title{
    height: 32rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #48617C;
}
.item__bottom__text{
    height: 32rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #ABBED2;
}
.item__bottom__info{
    display: flex;
    justify-content: space-between;    
    align-items: center;
    border: 1px solid red;
}
.item__bottom__info>image{
    height: 44rpx;
    width: 44rpx;
}
.item__bottom__info>view{
    display: flex;
    font-size: 24rpx;
    font-weight: 400;
    margin-left: 8rpx;
    
}
.item__bottom__info>view>image{
    height: 32rpx;
    width: 32rpx;
}
.item__info_right{
    color: #46CF84;
    padding-left: 6rpx;
}
.item__info_error{
    color: #FF475A;
    padding-left: 6rpx;
}