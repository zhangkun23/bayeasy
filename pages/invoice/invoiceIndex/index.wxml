<!--pages/invoice/invoiceIndex/index.wxml-->
<modal showModal="{{showModal}}" class="modal" contents="{{contents}}">
  <login-btn bind:click="goLogin" text="{{textInfo}}" btnBgColor="#1D83F0" btnWidth="240rpx" btnHeight="70rpx" fontSize="28rpx" 
  borderRadius="35rpx" boxShadow="0px 30px 50px 0px rgba(29, 131, 240, 0.2)"></login-btn>
</modal>
<view class="{{!pageShow?'bgColog opction':'bgColog' }}"  >
    <view class="title-container" style="margin-top: {{statusBarHeight}}px;">
        <view class="page-title">
            收支票据
        </view>
        <view class="page-subtitle">
            为您提供最专业的服务
        </view>
        <view class="split"></view>
    </view>
    <view class="content-frame">
        <view class="content-bg">
            <view class="content-container">
                <view class="horizon-border" style="border-top: 1px dashed #D2E0EF"></view>
                <view class="vertical-border" style=" border-left: 1px dashed #D2E0EF"></view>
                <view class="row-1">
                    <view class="gate-area-1"  data-url="/pages/invoice/incomeInvoice/index/index" bindtap="handelClickUrl">
                        <view>
                            <image class="gate-icon" src="{{img1_1}}" mode="aspectFill"></image>
                        </view>
                        <view class="name">
                            收入账单发票
                        </view>
                    </view>
                    <view class="gate-area-1" data-url='/pages/invoice/billingRecord/index/index' bindtap="handelClickUrl">
                        <view>
                            <image class="gate-icon"  src="{{img1_2}}" mode="aspectFill"></image>
                        </view>
                        <view class="name">
                            收入开票记录
                        </view>
                    </view>
                </view>
                <view class="row-2">
                    <view class="gate-area-2" data-url="/pages/invoice/invoiceUpload/index/index" bindtap="handelClickUrl">
                        <view>
                            <image class="gate-icon" src="{{img2_1}}" mode="aspectFill"></image>
                        </view>
                        <view class="name">
                            采集成本发票
                        </view>
                    </view>
                    <view class="gate-area-2" data-url="/pages/invoice/acquisitionCost/index" bindtap="handelClickUrl">
                        <view>
                            <image class="gate-icon" src="{{img2_2}}" mode="aspectFill"></image>
                        </view>
                        <view class="name">
                            进项成本发票
                        </view>
                    </view>
                </view>

            </view>
        </view>
    </view>
</view>