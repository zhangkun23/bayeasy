/* pages/faq/index.wxss */

.faq {
  background: url('https://image.bayeasy.cn/images-datas/index/bg.png') no-repeat;
  background-size: 100% 100%;
}

.faq__contaniner {
  margin: 67rpx 32rpx;
}

.faq__header {
  margin-bottom: 24rpx;
}

.faq__header-title {
  font-size: 44rpx;
}

.faq__header-hedaer {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.faq__list-item {
  background: #FFFFFF;
  box-shadow: 0rpx 10rpx 30rpx 0px rgba(209, 213, 223, 0.6);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.faq__item-header {
  display: flex;
  border-bottom: 1px solid #E6EEF7;
}

.faq__item-imagewrapper {
  margin-right: 16rpx;
}

.faq__list-image {
  width: 50rpx;
  height: 50rpx;
}

.faq__list-title {
  font-size: 28rpx;
  color: #283E56;
}

.faq__list-content {
  text-indent: 30rpx;
  color: #6E87A2;
  line-height: 36rpx;
  margin-top: 24rpx;
}