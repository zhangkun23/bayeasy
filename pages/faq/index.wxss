.faq {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  height: 100vh;
  background: url('https://image.bayeasy.cn/images-datas/index/bg.png') no-repeat;
  background-size: 100%;
}
.wrapper{
  flex: 1;
  height: 1rpx;
}
.faq__contaniner {
  margin: 67rpx 32rpx;
  height: calc(100% - 64rpx);
  display: flex;
  flex-direction: column;
}

.faq__header {
  margin-bottom: 24rpx;
}

.faq__header-title {
  font-size: 44rpx;
}

.faq__header-hedaer {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.faq__list-item {
  background: #FFFFFF;
  box-shadow: 0rpx 10rpx 30rpx 0px rgba(209, 213, 223, 0.6);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.faq_item-conimg {
  /* display: none; */
  margin-top: 24rpx;
}

.faq_item-conimg .faqImages {
  width: 626rpx;
  height: 372rpx;
}

.faq__item-header {
  display: flex;
  border-bottom: 1px solid #E6EEF7;
}

.faq__item-imagewrapper {
  margin-right: 16rpx;
}

.faq__list-image {
  width: 50rpx;
  height: 50rpx;
}

.faq__list-title {
  font-size: 28rpx;
  color: #283E56;
}

.faq__list-content {
  color: #6E87A2;
  line-height: 36rpx;
  margin-top: 24rpx;
}

.faq__icon {
  position: fixed;
  bottom: 196rpx;
  right: 43rpx;
  width: 112rpx;
  height: 112rpx;
  background: #FFA42E;
  color: #fff;
  text-align: center;
  border-radius: 50%;
  box-shadow: 0rpx 30rpx 50rpx 0rpx rgba(255, 164, 46, 0.42);
}

.faq__icon-tips {
  font-size: 20rpx;
}

.faq__icon-box {
  margin-top: 12rpx;
  height: 50rpx;
}

.faq__icon-img {
  width: 48rpx;
  height: 48rpx;
}

.faq__nodata {
  margin: 240rpx auto;
}

.faq__image {
  width: 370rpx;
  height: 300rpx;
}

.faq__nodata-text {
  color: #6E87A2;
  text-align: center;
}

.faq__empty {
  display: flex;
  width: 686rpx;
  height: 686rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 30rpx 0px rgba(201, 209, 228, 0.38);
  border-radius: 32rpx;
}

.faq__button {
  position: fixed;
  bottom: 150rpx;
  right: 150rpx;
  left: 133rpx;
  width: 500rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #FFA42E;
  box-shadow: 0px 30rpx 50rpx 0px rgba(255, 164, 46, 0.2);
  border-radius: 44rpx;
  /* margin: 190rpx auto 188rpx; */
}
.faq__button-wrapper {
 display: flex;
  justify-content: center;
}
.faq__button-text {
  margin-left: 22rpx;
}