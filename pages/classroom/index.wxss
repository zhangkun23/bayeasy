/* pages/classroom/index.wxss */

.classroom {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-image: url('https://image.bayeasy.cn/images-datas/public/backGround.png');
    background-position: top;
    background-repeat: no-repeat;
    background-size: cover;
}

.pic {
    height: 100%;
    width: 100%;
    border-radius: 28rpx;
    box-shadow: 0rpx 9rpx 26rpx -1px rgba(209, 213, 223, 0.6);
}

swiper {
    height: 100%;
}

.swiper-container {
    flex: 1;
    margin-top: 50rpx;
}

.wrapper {
    flex: 1;
    height: 1rpx;
}


.classroom__wrapper-box {
    height: calc(100% - 40rpx);
    width: calc(100% - 65rpx);
    text-align: center;
    margin: auto;
    /* display: flex;
    flex-direction: column;
    justify-content: center; */
    /* padding: 0 12rpx; */
    /* border-radius: 28rpx; */

}

.classroom__button {
    height: 90rpx;
    align-items: center;
    display: flex;
    justify-content: space-around;
    padding-bottom: 30rpx;
}

.btn {
    width: 280rpx;
    height: 70rpx;
    border-radius: 44rpx;
    text-align: center;
}

.classroom__button-left {
    background: #FFA42E;
    box-shadow: 0px 30rpx 50rpx 0px rgba(255, 164, 46, 0.2);
}

.classroom__button-right {
    width: 277rpx;
    height: 67rpx;
    border: 1rpx solid #FFA42E;
}

.classroom__button-left image,
.classroom__button-right image {
    width: 50rpx;
    height: 68rpx;
}

