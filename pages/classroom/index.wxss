/* pages/classroom/index.wxss */

.classroom{
  background-image: url('https://image.bayeasy.cn/images-datas/public/backGround.png');
  background-position: top;
  background-repeat: no-repeat;
  background-size: cover;
}


.classroom__wrapper-item image {
  width: 100%;
  height: 974rpx;
}

swiper {
  height: 974rpx;
  margin-bottom: 129rpx;
}

.classroom__wrapper {
  display: flex;
  margin-top: 50rpx;
}

.classroom__wrapper-box {
  display: flex;
  justify-content: center;
  margin: 0 24rpx;
  border-radius: 28rpx;
  box-shadow: 0px 9rpx 26rpx 0px rgba(209, 213, 223, 0.6);
}

.classroom__button {
  display: flex;
  justify-content: space-around;
}

.btn {
  width: 280rpx;
  height: 70rpx;
  border-radius: 44rpx;
  text-align: center;
}

.classroom__button-left {
  background: #FFA42E;
  box-shadow: 0px 30rpx 50rpx 0px rgba(255, 164, 46, 0.2);
}

.classroom__button-right {
  width: 277rpx;
  height: 67rpx;
  border: 1rpx solid #FFA42E;
}

.classroom__button-left image,
.classroom__button-right image {
  width: 50rpx;
  height: 68rpx;
}

