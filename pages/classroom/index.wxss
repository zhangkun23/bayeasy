}

.classroom__button {
  display: flex;
  justify-content: space-around;
}
.btn{
  width: 280rpx;
  height: 70rpx;
  border-radius: 44rpx;
  text-align: center;
}
.classroom__button-left {
  background: #FFA42E;
  box-shadow: 0px 30rpx 50rpx 0px rgba(255, 164, 46, 0.2);
}

.classroom__button-right {
  width: 277rpx;
  height: 67rpx;
  border: 1rpx solid #FFA42E;
}

.classroom__button-left image,
