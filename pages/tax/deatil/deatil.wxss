/* pages/tax/deatil/deatil.wxss */

.space-between {
  display: flex;
  justify-content: space-between;
}

.font-size-24 {
  font-size: 24rpx;
}

.mg-bp-24 {
  margin-bottom: 24rpx;
}


.detail__topTips {
  line-height: 36rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 24rpx;
}

.detail__topTips-icon {
  display: inline-block;
  margin-right: 7rpx;
}

.detail__topTips-icon image {
  width: 24rpx;
  height: 24rpx;
}

.detail__container {
  margin: 32rpx;
}

/* .detail__time {
} */

.detail__timeout {
  font-size: 32rpx;
  color: #283F56;
  margin-top: 48rpx;
  margin-bottom: 24rpx;
}

.detail__time-boxShadow {
  display: inline-block;
  width: 72rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: rgba(255, 255, 255, 0.48);
  border-radius: 14rpx;
  border: 1px solid #FFFFFF;
  margin: 0 16rpx;
  color: #1D83F0;
  /* padding: 13rpx 5rpx; */
}

.detail__date {
  margin-bottom: 32rpx;
  text-align: center;
}


.item__container {
  background: #FFFFFF;
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(209, 213, 223, 0.6);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
}

.item__header {
  display: flex;
  justify-content: center;
  align-items: center;
}

.item__center-tips {
  text-align: center;
  font-size: 48rpx;
  color: #283E56;
}

.item__header-image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.item__header-date {
  display: flex;
  justify-content: center;
}

.item__header-text {
  font-size: 24rpx;
  color: #6E87A2;

}

.pd-32 {
  padding: 0 32rpx 32rpx;
}

.item__center {
  padding-top: 24rpx;
}

.item__text {
  margin-bottom: 24rpx;
}

.item__center-title {
  color: #48617C;
}

.item__center-image {
  width: 24rpx;
  height: 24rpx;
}


.detail__tax {
  margin-bottom: 24rpx;
}

.detail__taxDetail {
  background: #FFFFFF;
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(209, 213, 223, 0.6);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 64rpx;
}

.detail__list {
  margin-bottom: 48rpx;
}

.detail__list-title {
  font-size: 28rpx;
  color: #283E56;
  padding-bottom: 23rpx;
  border-bottom: 2rpx dashed #E9ECF3;
}

.detail__taxDetail-content {
  margin-top: 23rpx;
}

.detail__content-title {
  color: #6E87A2;
}

.detail__content-text {
  color: #283E56;
}

.detail__button {
  width: 500rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #1D83F0;
  box-shadow: 0rpx 30rpx 50rpx 0rpx rgba(29, 131, 240, 0.2);
  border-radius: 44px;
  font-size: 34rpx;
  color: #FFFFFF;
  text-align: center;
  margin: 0 auto 86rpx;
}