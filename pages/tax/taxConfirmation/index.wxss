/* pages/tax/taxConfirmation/index.wxss */

.taxConfirmation {
  padding: 32rpx;
  height: calc(100% - 64rpx);
  display: flex;
  flex-direction: column;
}

.wrapper{
    flex: 1;
    height: 1rpx;
}

.taxConfirmation__container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.taxConfirmation__btn {
  width: 146rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #1D83F0;
  border-radius: 25rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin-bottom: 32rpx;
}

.taxConfirmation__list-item {
  width: 686rpx;
  /* height: 387rpx; */
  background: #FFFFFF;
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(209, 213, 223, 0.6);
  border-radius: 28rpx;
  margin-bottom: 32rpx;
}

.item__header {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #E6EEF7;
  align-items: center;
  height: 103rpx;
}

.item__header-image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.item__header-date {
  display: flex;
  align-items: center;
}

.item__header-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #283E56;

}

/* .item__header-tips {
  font-size: 24rpx;
  font-weight: 400;
  color: #FFA42E;
} */

.pd-32 {
  padding: 0 32rpx 32rpx;
}

.item__center {
  padding-top: 24rpx;
}

.item__text {
  margin-bottom: 10rpx;
}

.item__center-title {
  color: #48617C;
}

.securityCheck__topTips {
  display: flex;
  align-items: center;
  line-height: 32rpx;
  border-radius: 12rpx;
  padding: 7rpx 20rpx;
  margin-top: 32rpx;
}

/* .securityCheck__topTips-icon {
  display: flex;
  margin-right: 6rpx;
} */

.securityCheck__topTips-icon image {
  width: 24rpx;
  height: 24rpx;
}

.taxConfirmation__nodata {
  margin: 240rpx auto;
}

.taxConfirmation__image {
  width: 370rpx;
  height: 300rpx;
}

.taxConfirmation__nodata-text {
  color: #6E87A2;
  text-align: center;
}


.detail__topTips {
  line-height: 36rpx;
  border-radius: 12rpx;
  padding: 12rpx;
  font-size: 24rpx;
}

.itemImgView{
  display: inline-flex;
  align-items: center;
  vertical-align: top;
  padding-right: 8rpx;
}
.itemImgView .hide {
  width: 0;
  overflow: hidden;
}
.itemImgView image {
  width: 24rpx;
  height: 24rpx;
}