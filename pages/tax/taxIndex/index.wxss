/* pages/tax/taxIndex/index.wxss */
.bgColog {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    background-image: url('https://image.bayeasy.cn/images-datas/tax/taxBg.png');
    background-position: top;
    background-repeat: no-repeat;
    background-size: contain;
}

.title-container {
    display: flex;
    flex-direction: column;
    /* margin-top: 29.43%; */
    margin-left: 32rpx;
}

.title-container .page-title {
    font-size: 44rpx;
    font-weight: 600;
    color: #FFFFFF;
    line-height: 72rpx;
}

.title-container .page-subtitle {
    font-size: 28rpx;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 36rpx;
    margin-top: 8rpx;
}

.title-container .split {
    width: 43rpx;
    height: 10rpx;
    background: #FFFFFF;
    border-radius: 5px;
    opacity: 0.5;
    margin-top: 24rpx;
}

.content-frame {
    margin-top: 54rpx;
    margin-bottom: 256rpx;
}

.content-frame .content-bg {
    position: relative;
    margin-left: 32rpx;
    margin-right: 32rpx;
    background: #FFFFFF;
    box-shadow: 0px 10px 30px 0px rgba(201, 209, 228, 0.38);
    border-radius: 32px;
}

.content-frame .content-bg .content-container {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 568rpx;
    padding: 76rpx 43rpx 84rpx 43rpx;
}

.content-frame .content-bg .content-container .horizon-border {
    position: absolute;
    height: 1rpx;
    margin: auto;
    margin-left: 43rpx;
    margin-right: 43rpx;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    opacity: 0.5;
}

.content-frame .content-bg .content-container .vertical-border {
    position: absolute;
    margin: auto;
    margin-top:76rpx;
    margin-bottom: 84rpx;
    width: 1rpx;
    /* height: 100%; */
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    opacity: 0.5;
}

.content-frame .content-bg .content-container .row-1 {
    position: absolute;
    top: 96rpx;
    left: 0;
    display: flex;
    justify-content: center;
    height: max-content;
    width: 100%;
    /* left: 0; */
}
.content-frame .content-bg .content-container .row-2 {
    display: flex;
    position: absolute;
    bottom: 114rpx;
    right: 0;
    width: 100%;
    justify-content: center;
    height: max-content;
}

.content-frame .content-bg .content-container .row-1 .gate-area-1 {
    width: 45%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.gate-area-1 .gate-icon {
    width: 130rpx;
    height: 130rpx;
}

.gate-area-1 .name {
    margin-top: 24rpx;
    margin-bottom: 59rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #48617C;
    line-height: 44rpx;
}

.content-frame .content-bg .content-container .row-2 .gate-area-2 {
    width: 45%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.gate-area-2 .gate-icon {
    margin-top: 56rpx;
    width: 130rpx;
    height: 130rpx;
}

.gate-area-2 .name {
    margin-top: 24rpx;
    /* margin-bottom: 56rpx; */
    font-size: 28rpx;
    font-weight: 400;
    color: #48617C;
    line-height: 44rpx;

}
