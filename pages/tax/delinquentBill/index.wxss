/* pages/tax/delinquentBill/index.wxss */

.delinquentBill {
  background: url('https://image.bayeasy.cn/images-data/tax/taxreturn/arrearsBack.png') no-repeat;
  background-size: contain;
}
.taxConfirmation__container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 32rpx;
}

.taxConfirmation__btn {
  width: 146rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-weight: 400;
  color: #FFFFFF;
  /* margin-bottom: 34rpx; */
  align-self: flex-end;
}

.delinquentBill__account {
  align-self: center;
  color: #FFFFFF;
  text-align: center;
  margin-bottom: 40rpx;
}

.delinquentBill__account-title {
  font-size: 28rpx;
}

.delinquentBill__account-money {
  font-size: 64rpx;
}

.taxConfirmation__list-item {
  width: 686rpx;
  /* height: 387rpx; */
  background: #FFFFFF;
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(209, 213, 223, 0.6);
  border-radius: 28rpx;
  margin-bottom: 32rpx;
}

.item__header {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #E6EEF7;
  align-items: center;
  height: 103rpx;
}

.item__header-image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.item__header-date {
  display: flex;
}

.item__header-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #283E56;

}

