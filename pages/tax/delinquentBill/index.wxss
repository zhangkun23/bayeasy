.securityCheck__topTips {
  line-height: 32rpx;
  border-radius: 12rpx;
  padding: 7rpx 20rpx;
  margin-top: 32rpx;
}

.securityCheck__topTips-icon {
  display: inline-block;
  margin-right: 6rpx;
}

.securityCheck__topTips-icon image {
  width: 24rpx;
  height: 24rpx;
}

.taxConfirmation__nodata {
  background: #fff;
  border-radius: 32px;
  box-shadow: 0px 10px 30px 0px rgba(209, 213, 223, 0.6);
  padding: 166rpx 160rpx 224rpx;
}

.taxConfirmation__image {
  width: 370rpx;
  height: 300rpx;
}

.taxConfirmation__nodata-text {
  color: #6E87A2;
  text-align: center;
}