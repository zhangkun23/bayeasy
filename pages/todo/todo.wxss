.sum-info-container {
  display: flex;
  margin: 44rpx 32rpx 32rpx 32rpx;
  background-color: #FDFEFF;
  box-shadow: 10rpx 0 30rpx 0rpx rgba(201, 209, 228, 0.38);
  border-radius: 32rpx;
}

.sum-info-container .progress-container {
  width: 196rpx;
  height: 196rpx;
  margin: 32rpx 48rpx 32rpx 32rpx;
}

.sum-info-container .contents {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  /* text-align: center; */
}

.sum-info-container .contents .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #283E56;
  line-height: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  line-height: 40rpx;

}

.sum-info-container .contents .sub-title {
  font-size: 24rpx;
  font-weight: 400;
  color: #48617C;
  line-height: 32rpx;
}

.sum-info-container .contents .sub-title .count {
  color: #FFA42E;
}

.default-menu {
  opacity: 0.66;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  margin-top: 200rpx;
  padding: 0;

}

.default-menu .bg {
  /* width: 369rpx; */
