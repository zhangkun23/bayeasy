/**index.wxss**/
.infoTop{
  position: relative;
  
}
.infoTop>.logo_byz{
  width: 200rpx;
  height: 76rpx;
  position: absolute;
  bottom: 153rpx;
  left: 35rpx;
}
.infoTop>.infoTitle{
  font-size: 28rpx;
  font-weight: 600;
  color: #283E56;
  position: absolute;
  bottom: 97rpx;
  left: 35rpx;
}
.infoTop>.infoButton{
  width: 214rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #1D83F0;
  border-radius: 35rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  position: absolute;
  bottom: 21rpx;
  left: 35rpx;
}
.count{
  margin: 41rpx 35rpx 0;
}
.countTop{
  display: flex;
  justify-content: space-between;
}
.countTop_left{
  position: relative;
}
.countTop_left>.countCenterTitle{
  position: absolute;
  bottom: 32rpx;
  left: 32rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}
.countTop_right{
  display: flex;
  flex-direction: column;
  padding-left: 16rpx;
}
.countTop_right>view{
  position:relative;
}
.countTop_right>view>.title{
  position: absolute;
  bottom: 32rpx;
  left: 24rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.countTop_right>.bottom{
  margin-top: 16rpx;
}
.countCenter{
  padding-top: 16rpx;
  position: relative;
}
.countCenter>.countCenterTitle{
  position: absolute;
  top: 90rpx;
  left: 32rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}
.countBottom{
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
}
.countBottom>view{
  width: 50%;
  height: 151rpx;
  background: #FFFFFF;
  box-shadow: 0px 10px 30px 0px rgba(201, 209, 228, 0.38);
  border-radius: 16px;
}
.countLeft{
  margin-right: 8rpx;
}
.countRight{
  margin-left: 8rpx;
}
.countBottom_info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16rpx;
  padding-left: 24rpx;
}
.countBottom_info >.bottom_left_title > .bottom_left_title_top{
  font-size: 36rpx;
  font-weight: 600;
  color: #283E56;
}
.countBottom_info >.bottom_left_title > .bottom_left_title_bottom{
  font-size: 20rpx;
  font-weight: 400;
  padding-top: 10rpx;
  color: #6E87A2;
}

.countBottom_info> .bottom_right{
  height: 80rpx;
  width: 80rpx;
  margin-top: -37rpx;
}