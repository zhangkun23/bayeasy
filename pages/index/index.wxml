<modal showModal="{{showModal}}" class="modal" contents="{{contents}}">
  <login-btn bind:click="goLogin" text="{{textInfo}}" btnBgColor="#1D83F0" btnWidth="240rpx" btnHeight="70rpx" fontSize="28rpx" borderRadius="35rpx" boxShadow="0px 30px 50px 0px rgba(29, 131, 240, 0.2)"></login-btn>
</modal>

<view class="waper" hidden="{{!pageShow}}">
  <view class="infoTop">
    <view class="InfoTop__top">
      <image class="logo_byz" src="{{logo_byz}}" />
      <text class="infoTitle">贝易资企业财税服务商</text>
      <text class="infoButton" bindtap="handelClick" data-url='info' wx:if="{{token && userStatus < 2}}">完善个人信息</text>
      <text class="infoButton" bindtap="handelClick" data-url='/pages/login/login/index' wx:if="{{!token}}">登录/注册</text>
    </view>
    <image class="banner" src="{{banner}}" />
  </view>

  <!-- 待办 -->
  <view class="daiban" wx:if="{{dbNum!=0}}">
    <view class="daibanLeft">
      <image class="daibanImg" src="{{daiban}}" />
      <view class="daibanText">
        <view class="infoTitle">当前您有</view>
        <view class="daibanTextCounter">{{dbNum}}</view>
        <view class="infoTitle">项待办事项</view>
      </view>
    </view>
    <view class="daibanButton" bindtap="handelClickUrl" data-url="/pages/todo/todo">
      去确认
    </view>
  </view>

  <view class="count">
    <view class="countTop">
      <view class="countTop_left" data-url='/pages/tax/taxreturn/index' bindtap="handelClickUrl">
        <image class="zcjc" src="{{nssb}}" />
        <view class="countCenterTitle">纳税申报</view>
      </view>
      <view class="countTop_right">
        <view class="top" bindtap="handelClickUrl" data-url='/pages/serviceFee/index/index'>
          <image class="srzdfp" src="{{serviceFee}}" />
          <view class="title">服务费用</view>
        </view>
        <view class="bottom" bindtap="handelClickUrl" data-url='/pages/invoice/acquisitionCost/index'>
          <image class="cbfy" src="{{cbfy}}" />
          <view class="title">成本费用</view>
        </view>
      </view>
    </view>
    <view class="countCenter" data-url='/pages/invoice/incomeInvoice/index/index' bindtap="handelClickUrl">
      <text class="countCenterTitle">收入账单发票</text>
      <image class="nssb" src="{{srzdfp}}" />
    </view>
    <view class="usermotto">
      <view class="countBottom">
        <view class="countBottom_info back1" data-url='/pages/classroom/index' bindtap="handelClickUrl">
          <view class="bottom_left_title_top">财税小课堂</view>
          <!--<view class="bottom_left_title">
             <image class="bottom_right" src="{{csxkt}}" /> 
          </view>-->
        </view>
        <view class="countBottom_info back2" data-url='/pages/service/index' bindtap="handelClickUrl">
          <view class="bottom_left_title_top">服务介绍</view>
          <!--<view class="bottom_left_title">
             <image class="bottom_right" src="{{fwjs}}" /> 
          </view>-->
        </view>
        <view class="countBottom_info back3" data-url='/pages/faq/index' bindtap="handelClickUrl">
          <view class="bottom_left_title_top">常见问答</view>
          <!--<view class="bottom_left_title">
            <image class="bottom_right" src="{{faq}}" />
          </view>-->
        </view>
      </view>
    </view>
  </view>
</view>