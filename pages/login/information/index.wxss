/* pages/login/information/index.wxss */

.information__back {
  background-image: url('https://image.bayeasy.cn/images-datas/authentication/back.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  padding: 32rpx;
}

.securityCheck__topTips {
  line-height: 32rpx;
  font-size: 24rpx;
  color: #FFA42E;
  background: #FEF8E5;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.securityCheck__topTips-icon {
  display: inline-block;
  margin-right: 10rpx;
}

.securityCheck__topTips-icon image {
  width: 24rpx;
  height: 24rpx;
}


.information__idcard {
  display: flex;
  justify-content: space-between;
}

.information__img-group {
  display: flex;
  flex-direction: column;
}
.information__img-group .loading {
  width: 28rpx;
  height: 28rpx;
  margin-top: 16rpx;
  animation: spin 1s linear infinite;
}
@-webkit-keyframes spin {
  from {
      -webkit-transform: rotate(0deg);
  }
  to {
      -webkit-transform: rotate(360deg);
  }
}
@keyframes spin {
  from {
      transform: rotate(0deg);
  }
  to {
      transform: rotate(360deg);
  }
}
.information__img-group image {
  width: 323rpx;
  height: 200rpx;
}


.idcard__tips {
  height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  color: #ffffff;
  background-color: #1D83F0;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  margin-top: -15rpx;
}

.idcard__upload {
  background-color: #FFA42E;
}

.information__form {
  position: relative;
}

.tostTop {
  height: 500rpx;
  width: 100%;
  background-color: white;
  position: absolute;
  top: 0;
  z-index: 2;
  opacity: 0;
}

.information__confirm {
  width: 500rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #ffffff;
  font-size: 34rpx;
  background: #1D83F0;
  font-weight: 400;
  box-shadow: 0rpx 30rpx 50rpx 0rpx rgba(29, 131, 240, 0.2);
  border-radius: 44rpx;
  text-align: center;
  margin: 80rpx auto 0;
}

.placeholderStyle {
  color: #ABBED2;
  font-size: 28rpx;
}

