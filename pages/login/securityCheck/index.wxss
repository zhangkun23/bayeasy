/* pages/login/securityCheck/index.wxss */

.mg-tp-20{
   margin-top: 20rpx;
}


.securityCheck__back {
  padding: 32rpx;
}

.securityCheck__topTips {
  line-height: 32rpx;
  font-size: 24rpx;
  color: #FFA42E;
  background: #FEF8E5;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.securityCheck__topTips-icon {
  display: inline-block;
  margin-right: 10rpx;
}

.securityCheck__topTips-icon image {
  width: 24rpx;
  height: 24rpx;
}

.securityCheck__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #283E56;
  box-shadow: 0px 10rpx 30rpx 0rpx rgba(201, 209, 228, 0.38);
  border-radius: 28rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.securityCheck__content {
  /* height: 358rpx; */
  background: #FDFEFF;
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(201, 209, 228, 0.38);
  border-radius: 32rpx;
  padding: 48rpx 24rpx;
  box-sizing: border-box;
  position: relative;
}

.securityCheck__content-tips {
  font-size: 28rpx;
  font-weight: 600;
  color: #283E56;
}

.securityCheck__content-input {
  display: flex;
  padding: 23rpx 1rpx;
  border-bottom: 1px solid #E6EEF7;
  /* margin-bottom: 47rpx; */
}
.addborderClass {
  border-bottom: 1px solid #FF475A !important;
}
.securityCheck__content-text{
  color: #FF475A;
  font-size: 24rpx;
  margin-bottom: 32rpx;
  margin-top: 15rpx;
}
.securityCheck__content-close {
  position: absolute;
  right: 24rpx;
  top: 120rpx;
}
.securityCheck__content-close image{
  width: 30rpx;
  height: 30rpx;
}

.placeholderStyle {
  color: #E6EEF7;
  font-size: 44rpx;
  margin-bottom: 23rpx;
}

.securityCheck__content-btn {
  width: 240rpx !important;
  border-radius: 35rpx;
  background-color: #E6EEF7;
  font-size: 28rpx;
  color: #ABBED2;
  font-weight: bold;
  text-align: center;
  padding: 15rpx 0;
  margin: 0 auto;
}

.addClass {
  color: #FFFFFF;
  background: #1D83F0 !important;
  box-shadow: 0rpx 30rpx 50rpx 0rpx rgba(29, 131, 240, 0.2) !important;
}

.securityCheck__footer {
  display: flex;
  justify-content: center;
  height: 100rpx;
  align-items: center;
}

.securityCheck__bottom {
  position: fixed;
  bottom: 41rpx;
}

.securityCheck__footer-image {
  display: inline-block;
  margin-top: 3rpx;
  margin-right: 10rpx;
}

.securityCheck__footer-image image {
  width: 30rpx;
  height: 30rpx;
}

.securityCheck__footer-service {
  font-size: 28rpx;
  color: #283E56;
}