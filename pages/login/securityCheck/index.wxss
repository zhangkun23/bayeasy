/* pages/login/securityCheck/index.wxss */



.securityCheck__back {
  background-image: url('https://image.bayeasy.cn/images-data/authentication/back.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  padding: 32rpx;
}

.securityCheck__topTips {
  line-height: 32rpx;
  font-size: 24rpx;
  color: #FFA42E;
  background: #FEF8E5;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.securityCheck__topTips-icon {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  color: #fff;
  background: #FFA42E;
  border-radius: 50%;
  text-align: center;
  margin-right: 10rpx;
}

.securityCheck__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #283E56;
  box-shadow: 0px 10rpx 30rpx 0rpx rgba(201, 209, 228, 0.38);
  border-radius: 28rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.securityCheck__content {
  /* width: 100%; */
  height: 358rpx;
  background: #FDFEFF;
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(201, 209, 228, 0.38);
  border-radius: 32rpx;
  padding: 48rpx 24rpx;
  box-sizing: border-box;
}

.securityCheck__content-tips {
  font-size: 28rpx;
  font-weight: 600;
  color: #283E56;
}

.securityCheck__content-input {
  display: flex;
  padding: 23rpx 1rpx;
  border-bottom: 1px solid #E6EEF7;
  margin-bottom: 47rpx;
}

.securityCheck__content-btn {
  width: 240rpx !important;
  /* height: 70rpx; */
  border-radius: 35rpx;
  background-color: #E6EEF7;
  font-size: 28rpx;
  color: #ABBED2;
  font-weight: bold;
  text-align: center;
  padding: 15rpx 0;
  margin: 0 auto;
}

.placeholderStyle {
  color: #E6EEF7;
  font-size: 44rpx;
  margin-bottom: 23rpx;
}