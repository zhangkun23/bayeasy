/* pages/personal/contactStaff/index.wxss */
.bgColog {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  background-image: url('https://image.bayeasy.cn/images-datas/public/backGround.png');
  background-position: top;
  background-repeat: no-repeat;
  background-size: cover;

}

.staff-info-container {
  display: flex;
  flex-direction: column;
  margin-top: 17.4%;
  align-items: center;
  text-align: center;
}

.staff-info-container .qrcode-container {
  display: flex;
  position: relative;
  background: rgba(194, 223, 255, 0.3);
  border-radius: 16rpx;
  width: 400rpx;
  height: 400rpx;
}


.staff-info-container .qrcode-container .qrcode {
  margin: auto;
  width: 362rpx;
  height: 362rpx;
}

.staff-info-container .content {
  margin-top: 24rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #283E56;
  line-height: 53rpx;
}

.staff-info-container .tel-container {
  width: 500rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  background: #1D83F0;
  box-shadow: 0rpx 2rpx 28rpx 0rpx rgba(29, 131, 240, 0.53);
  border-radius: 44rpx;
  text-align: center;
  margin-top: 80rpx;

}

.staff-info-container .tel-container >.icon {
  display: flex;
  align-items: center;
  margin-right: 16rpx;
}

.customer_service{
  width: 42rpx;
  

}