.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.bgColog {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  background-image: url('https://image.bayeasy.cn/images-data/public/backGround.png');
  background-position: top;
  background-repeat: no-repeat;
  background-size: cover;
}

.orangeTips {
  color: #FFA42E !important;
}

.orangeBack {
  background: #FEF8E5 !important;
}
.buleTips {
  color: #1D83F0 !important;
}
.greennTips {
  color: #46CF84 !important;
}

.font-600 {
  font-weight: 600;
}

.font-size-24 {
  font-size: 24rpx;
}

.bluebtn {
  width: 500rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #1D83F0;
  box-shadow: 0rpx 30rpx 50rpx 0rpx rgba(29, 131, 240, 0.2);
  border-radius: 44px;
  font-size: 34rpx;
  color: #FFFFFF;
  text-align: center;
  margin: 0 auto;
}
