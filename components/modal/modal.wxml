<!--components/modal/modal.wxml-->
<view class="modal-wrapper" wx:if="{{showModal}}">
  <view class="modal-area-container">
    <view class="modal-area">
      <view class="modal-content">
        <view class="bg">
          <image src="{{icon}}" class="modalBg" mode="widthFix"></image>
        </view>
        <view class="text-area">
          <view class="title">
            {{title}}
          </view>
          <view class="content-container">
            <view class="content" wx:for="{{contents}}" wx:key="index">
              {{item}}
            </view>
          </view>
          <view class="btn">
            <slot></slot>
          </view>
        </view>
      </view>
    </view>
    <view class="close-btn" bindtap="closeModal">
      <image class="icon" src="{{closeBtn}}" mode="aspectFill"></image>
    </view>
  </view>

</view>