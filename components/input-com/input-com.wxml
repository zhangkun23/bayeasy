<view class="content">
    <view class="title">{{title}}
        <h1 wx:if="{{must}}">*</h1>
    </view>
    <block wx:if="{{type==='date'}}">
        <picker mode="date" value="{{dateTime}}" start="{{dateStartTime}}" end="{{dateEndTime}}" bindchange="bindDateChange" bindcancel="bindDateCancel">
            <view wx:if="{{!inputValue}}" class=".datePlaceholder">请选择开票日期</view>
            <view wx:else class="dateValue">{{inputValue}}
            </view>
        </picker>
    </block>
    <block wx:else>
        <input type="{{type}}" disabled="{{disabled}}" placeholder="{{placeholder}}" maxlength="{{maxlength}}" placeholder-class="placeholderStyle" model:value="{{inputValue}}" data-key="{{key}}" bindinput="onInput" bindfocus="onFocus" bindblur="onBlur" bindtap="onShowDate" />
    </block>
    <view hidden="{{clearHidden}}" wx:if="{{clearShow}}" class="closeView" bindtap="clearInput">
        <image data-params="telephone" src="{{inputClose}}"></image>
    </view>
    <view wx:if="{{icon_rl}}" class="closeView" bindtap="clearInput">
        <image data-params="telephone" src="{{rl}}"></image>
    </view>
    <view wx:if="{{icon_down}}" class="closeView" bindtap="clearInput">
        <image data-params="telephone" src="{{down}}"></image>
    </view>
</view>